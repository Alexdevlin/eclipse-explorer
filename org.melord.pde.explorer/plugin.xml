<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.melord.pde.explorer.command1"
               icon="icons/fldr_obj.gif"
               label="%command.label"
               style="push">
            <visibleWhen>
               <iterate
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                     <instanceof
                           value="org.eclipse.jdt.core.IJavaElement">
                     </instanceof>
                  </or>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.window"
            id="org.melord.pde.explorer.command1"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.melord.pde.explorer.handlers.OpenExplorerHandler"
            commandId="org.melord.pde.explorer.command1">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.melord.pde.explorer.command1"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+`">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ui.preferencePages.Workbench"
            class="org.melord.pde.explorer.preferences.ExplorerPreferencePage"
            id="org.melord.pde.explorer.preferences.ExplorerPreferencePage"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.melord.pde.explorer.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
